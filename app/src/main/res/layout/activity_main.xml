<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#855e53"
        android:layout_width="0dp"
        android:layout_height="160dp" />
    <TextView
        android:id="@+id/text_capp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_view"
        android:text="Cappuccino"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="#855e53"
        />
    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrow_back"
        android:layout_margin="16dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:tint="@color/white"/>

    <ImageView
        android:id="@+id/time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_view"
        app:layout_constraintEnd_toStartOf="@+id/favorite"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:src="@drawable/ic_time"
        android:layout_margin="16dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:tint="#855e53" />

    <TextView
        android:id="@+id/time_text"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintStart_toStartOf="@id/time"
        app:layout_constraintEnd_toEndOf="@id/time"
        android:textColor="#855e53"
        android:text="15 min."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/favorite"
        app:layout_constraintTop_toBottomOf="@id/view_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/time"
        android:src="@drawable/ic_favorite"
        android:layout_margin="16dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:tint="#855e53" />

    <TextView
        android:id="@+id/favorite_text"
        app:layout_constraintTop_toBottomOf="@id/favorite"
        app:layout_constraintStart_toStartOf="@id/favorite"
        app:layout_constraintEnd_toEndOf="@id/favorite"
        android:textColor="#855e53"
        android:text="50325"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_text"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#855e53"
        android:layout_margin="16dp"/>
    <TextView
        android:id="@+id/description"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:text="Uma simples receita para início do dia"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/ingredients"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:text="Ingredientes:"
        android:textStyle="bold"
        android:textSize="32dp"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/arrow1"
        app:layout_constraintTop_toBottomOf="@id/ingredients"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_arrow_right"
        android:layout_margin="16dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:tint="#855e53" />

    <TextView
        android:id="@+id/ingredint1"
        app:layout_constraintTop_toTopOf="@id/arrow1"
        app:layout_constraintBottom_toBottomOf="@id/arrow1"
        app:layout_constraintStart_toEndOf="@id/arrow1"
        android:text="1 sachê Cappiccino"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/arrow2"
        app:layout_constraintTop_toBottomOf="@id/arrow1"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_arrow_right"
        android:layout_margin="16dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:tint="#855e53" />

    <TextView
        android:id="@+id/ingredint2"
        app:layout_constraintTop_toTopOf="@id/arrow2"
        app:layout_constraintBottom_toBottomOf="@id/arrow2"
        app:layout_constraintStart_toEndOf="@id/arrow1"
        android:text="200ml de leite"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/arrow3"
        app:layout_constraintTop_toBottomOf="@id/arrow2"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_arrow_right"
        android:layout_margin="16dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:tint="#855e53" />

    <TextView
        android:id="@+id/ingredint3"
        app:layout_constraintTop_toTopOf="@id/arrow3"
        app:layout_constraintBottom_toBottomOf="@id/arrow3"
        app:layout_constraintStart_toEndOf="@id/arrow1"
        android:text="50g de chocolate em po"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>